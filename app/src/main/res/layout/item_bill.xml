<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E9EBF4">

    <LinearLayout
        android:id="@+id/layout_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:layout_toStartOf="@id/txt_don_gia"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:id="@+id/txt_so_xe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số xe"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txt_quang_duong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quãng đường"
            android:textColor="@color/black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_don_gia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:padding="14dp"
        android:background="@color/white"
        android:text="Tổng đơn giá"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>